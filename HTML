import 'package:flutter/material.dart';

class ActivityListScreen extends StatelessWidget {
  const ActivityListScreen({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: const Color(0xFF0F1C4D),
      appBar: AppBar(
        backgroundColor: Colors.transparent,
        elevation: 0,
        title: const Text("What's around?", style: TextStyle(color: Colors.white)),
        actions: [
          TextButton(
            onPressed: () {},
            child: const Text("See All", style: TextStyle(color: Colors.white)),
          )
        ],
      ),
      body: Padding(
        padding: const EdgeInsets.all(16),
        child: ListView(
          children: [
            Row(
              children: const [
                DateFilter(text: "Today", selected: true),
                DateFilter(text: "Tomorrow"),
                DateFilter(text: "7 April"),
                DateFilter(text: "8 April"),
              ],
            ),
            const SizedBox(height: 20),
            SizedBox(
              height: 160,
              child: ListView(
                scrollDirection: Axis.horizontal,
                children: [
                  activityImageCard('assets/images/activity1.jpg'),
                  activityImageCard('assets/images/activity2.jpg'),
                  activityImageCard('assets/images/activity3.jpg'),
                ],
              ),
            ),
            const SizedBox(height: 30),
            const Text('Top Attractions in Al Khobar', style: TextStyle(color: Colors.white, fontSize: 18)),
            const SizedBox(height: 12),
            attractionCard(1, "Ithra", "Cultural center and museum.", 'assets/images/ithra.jpg'),
            attractionCard(2, "AlRashed Mall", "Luxury shopping mall.", 'assets/images/mall.jpg'),
            attractionCard(3, "Corniche", "Waterfront fun in Khobar.", 'assets/images/corniche.jpg'),
          ],
        ),
      ),
    );
  }

  Widget activityImageCard(String imagePath) {
    return Padding(
      padding: const EdgeInsets.only(right: 12.0),
      child: ClipRRect(
        borderRadius: BorderRadius.circular(12),
        child: Image.asset(imagePath, width: 120, height: 160, fit: BoxFit.cover),
      ),
    );
  }

  Widget attractionCard(int number, String title, String desc, String img) {
    return Card(
      color: Colors.white12,
      shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(12)),
      child: ListTile(
        leading: CircleAvatar(
          backgroundColor: Colors.purple,
          child: Text('$number', style: const TextStyle(color: Colors.white)),
        ),
        title: Text(title, style: const TextStyle(color: Colors.white)),
        subtitle: Text(desc, style: const TextStyle(color: Colors.white70)),
        trailing: ClipRRect(
          borderRadius: BorderRadius.circular(10),
          child: Image.asset(img, width: 60, height: 60, fit: BoxFit.cover),
        ),
      ),
    );
  }
}

class DateFilter extends StatelessWidget {
  final String text;
  final bool selected;

  const DateFilter({super.key, required this.text, this.selected = false});

  @override
  Widget build(BuildContext context) {
    return Container(
      margin: const EdgeInsets.only(right: 10),
      padding: const EdgeInsets.symmetric(horizontal: 12, vertical: 8),
      decoration: BoxDecoration(
        color: selected ? Colors.white : Colors.white24,
        borderRadius: BorderRadius.circular(20),
      ),
      child: Text(
        text,
        style: TextStyle(color: selected ? Colors.black : Colors.white),
      ),
    );
  }
}

